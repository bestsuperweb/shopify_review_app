
<%= form_for(:review, url: product_reviews_path(product), method: "post") do |f| %>

	<% if @review %> <%#there will only even be a @review object anyway if there's a saving error %> 
		<% if @review.errors.any? %> 
			<%= render partial: 'shared/errors', locals: {errorObj: @review} %> 
		<%end%> 
	<%end%> 

	<%= f.number_field :rating, class: 'form-control' %> 
	<%= f.text_area :comment, class: 'form-control' %> 
	<%= f.submit "Post Review" %> 
<% end %> 


